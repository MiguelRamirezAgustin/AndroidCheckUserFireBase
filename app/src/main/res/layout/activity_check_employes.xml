<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CheckEmployesActivity">

    <LinearLayout
        android:id="@+id/linearHeaders"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/check"
        android:gravity="center"
        android:orientation="vertical">

        <DigitalClock
            android:id="@+id/simpleDigitalClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_orange"
            android:fontFamily="sans-serif-light"
            android:textSize="50dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_orange"
            android:fontFamily="sans-serif-light"
            android:textSize="20dp"
            android:gravity="center"
            />

    </LinearLayout>


    <RelativeLayout
            android:id="@+id/relatiCheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearHeaders"
            android:background="@color/color_gray_backgraund">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardCheck"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            android:elevation="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChekGo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Registrar entrada"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/iconcheck"
                    android:paddingLeft="25dp"
                    android:textColor="@color/color_orange"
                    android:background="@drawable/itemdashboards"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardCheckExit"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/cardCheck"
            android:elevation="10dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChekExit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Registrar salida"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/iconcheck"
                    android:paddingLeft="25dp"
                    android:textColor="@color/color_orange"
                    android:background="@drawable/itemdashboards"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>